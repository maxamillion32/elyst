<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context="com.elystapp.elyst.CreateEventActivity"
    tools:showIn="@layout/activity_create_event">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_event"
                android:layout_width="@dimen/textview_width"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/textview_height"
                android:textSize="@dimen/font_size"
                android:text="@string/title_event"/>
            <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/entered_title"-->
            <!--android:inputType="text"/>-->
            <TextView
                android:id="@+id/location_event"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_width="@dimen/textview_width"
                android:layout_below="@+id/title_event"
                android:layout_height="@dimen/textview_height"
                android:textSize="@dimen/font_size"
                android:text="@string/location"/>
            <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/entered_location"-->
            <!--android:inputType="text"/>-->
            <TextView
                android:id="@+id/date_event"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/location_event"
                android:layout_width="@dimen/textview_width"
                android:layout_height="@dimen/textview_height"
                android:textSize="@dimen/font_size"
                android:text="@string/date"/>
            <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/entered_date"-->
            <!--android:inputType="datetime"/>-->
            <TextView
                android:id="@+id/time_event"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/date_event"
                android:layout_width="@dimen/textview_width"
                android:layout_height="@dimen/textview_height"
                android:textSize="@dimen/font_size"
                android:text="@string/time"/>
            <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/entered_time"-->
            <!--android:inputType="datetime"/>-->
            <TextView
                android:id="@+id/attending_event"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/time_event"
                android:layout_width="@dimen/textview_width"
                android:layout_height="@dimen/textview_height"
                android:textSize="@dimen/font_size"
                android:text="@string/guests"/>
            <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/entered_attending"-->
            <!--android:inputType="number"/>-->
            <TextView
                android:id="@+id/cost_event"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/attending_event"
                android:layout_width="@dimen/textview_width"
                android:layout_height="@dimen/textview_height"
                android:textSize="@dimen/font_size"
                android:text="@string/event_cost"/>
            <TextView
                android:id="@+id/description_event"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/cost_event"
                android:layout_width="@dimen/textview_width"
                android:layout_height="@dimen/textview_height"
                android:textSize="@dimen/font_size"
                android:text="@string/description"/>

            <!-- Title above the profile pic -->
            <TextView
                android:id="@+id/text_image_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/description_event"
                android:text="Event Photo"></TextView>

            <!-- LinearLayout for the profile pic and the change button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_image_event"
                android:baselineAligned="false">

                <ImageView
                    android:id="@+id/image_event"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:contentDescription="Event Photo"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <requestFocus />
                </ImageView>

                <Button
                    android:id="@+id/button_change_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:onClick="onChangePhotoClicked"
                    android:text="Select"></Button>

            </LinearLayout>
            <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/entered_description"-->
            <!--android:inputType="text"/>-->


            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal"-->
            <!--android:baselineAligned="false">-->
            <!--<ImageView-->
            <!--android:id="@+id/profile_pic"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="100dp"-->
            <!--android:layout_margin="5dp"-->
            <!--android:src="@drawable/app_icon_elyst"-->
            <!--android:contentDescription="@string/pic_description"-->
            <!--android:layout_weight="1"/>-->
            <!--<Button-->
            <!--android:id="@+id/change_pic"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/change_pic" />-->

            <!--</LinearLayout>-->
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <Button
                android:layout_gravity="bottom"
                android:id="@+id/save_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:layout_weight="1.0" />
            <Button
                android:id="@+id/cancel_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_weight="1.0" />
        </LinearLayout>
        <!--<TextView-->
        <!--android:id="@+id/infoText"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
    </LinearLayout>
</ScrollView>


